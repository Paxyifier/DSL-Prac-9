{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "-O2",
                "-std=c++11",
                "-g",
                "${file}",
                "-o",
                "out/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}